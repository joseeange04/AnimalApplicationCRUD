@model WebAnimalApplicationNET.Models.Animal

<h2>Delete Animal</h2>

<h3>Are you sure you want to delete this animal?</h3>
<div class="animal-details">
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.id)</dd>
        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.type)</dd>
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.nom)</dd>
        <dt class="col-sm-2">Color</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.couleur)</dd>
        <dt class="col-sm-2">Legs</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.pattes)</dd>
    </dl>

    <form asp-action="Delete">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this animal?')">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
